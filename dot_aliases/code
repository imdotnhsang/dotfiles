# open code in current directory
alias co="code ."

# create react app commands
alias cra="npm create vite@latest react"
alias crnext="npx create-next-app@latest"

# react native commands
alias podi="cd ios && pod install --repo-update && cd .."
alias bundli="cd ios && bundler install --repo-update && cd .."
alias bapk="cd android && ./gradlew clean && ./gradlew assembleRelease && open ./app/build/outputs/apk/release && cd .."
alias baab="cd android && ./gradlew clean && ./gradlew bundleRelease && open ./app/build/outputs/bundle/release && cd .."

# remove node_modules
alias rnm="rm -rf node_modules"

# playwright commands
alias nxe2e="npx playwright test"
alias nxe2eui="npx playwright test --ui"
alias gente2e="npx playwright codegen"
alias nxe2erp="npx playwright show-report"

# npm commands
alias nr="npm run"
alias ni="npm i"
alias nid="npm i -D"
alias nig="npm i -g"
alias nu="npm uninstall"
alias nrs="npm run start"
alias nrsd="npm run start:dev"
alias nrb="npm run build"
alias nrt="npm run test"
alias nrtc="npm run test:coverage"
alias nrd="npm run doc"
alias nrl="npm run lint"
alias nrlf="npm run lint:fix"
alias nrfm="npm run format"
alias nrtsc="npm run typecheck"

# yarn commands
alias y="yarn"
alias yi="yarn add"
alias yid="yarn add -D"
alias yig="yarn add -g"
alias yu="yarn remove"
alias yrs="yarn run start"
alias yrsd="yarn run start:dev"
alias yrb="yarn run build"
alias yrt="yarn run test"
alias yrtc="yarn run test:coverage"
alias yrd="yarn run doc"
alias yrl="yarn run lint"
alias yrlf="yarn run lint:fix"
alias yfm="yarn run format"
alias ytsc="yarn run typecheck"

# pnpm commands
alias pnr="pnpm run"
alias pni="pnpm install"
alias pnid="pnpm i -D"
alias pnig="pnpm i -g"
alias pnu="pnpm uninstall"
alias pnrs="pnpm run start"
alias pnrsd="pnpm run start:dev"
alias pnrb="pnpm run build"
alias pnt="pnpm run test"
alias pntc="pnpm run test:coverage"
alias pnd="pnpm run doc"
alias pnrl="pnpm run lint"
alias pnrlf="pnpm run lint:fix"
alias pnf="pnpm run format"
alias pntsc="pnpm run typecheck"
