alias glcn="git config --local user.name"
alias glce="git config --local user.email"
alias glc="git config --list --local"
alias glccf="git config --local --add --bool push.autoSetupRemote true"

alias gc="git checkout"
alias gl="git log"
alias gcb="git checkout -b"
alias gcd="git checkout develop && git pull origin develop"
alias gcstg="git checkout staging && git pull origin staging"
alias gcm="git checkout main && git pull origin main"
alias gcuat="git checkout uat && git pull origin uat"

alias gf="git fetch"
alias gcl="git clone"
alias gm="git merge"
alias gmm="git merge main"
alias gmstg="git merge staging"
alias gmuat="git merge uat"
alias gmd="git merge develop"

alias gp="git pull origin"
alias gpsh="git push origin"

alias gst="git status"
alias gbl="git branch -l"
alias gba="git branch -a"
alias gbr="git branch -r"
alias	gbm="git branch -m"
alias gbd="git branch -d"

alias ga="git add ."
alias gacm="git add . && git commit -m"
alias gabc="git add . && better-commits"

alias gbc="better-commits"
alias gbb="better-branch"

alias gcam="git commit --amend -m"
alias gcamra="git commit --amend --reset-author"

alias gpshf="git push origin --f"
alias grh="git reset --hard"
alias grs="git reset --soft"
