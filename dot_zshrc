export ZSH="$HOME/.oh-my-zsh"
export GITHUB_USERNAME="imdotnhsang"

ZSH_THEME="robbyrussell"

plugins=(git z zsh-autosuggestions zsh-syntax-highlighting)

source $ZSH/oh-my-zsh.sh

# Aliases
. ~/.aliases/brew
. ~/.aliases/chezmoi
. ~/.aliases/code
. ~/.aliases/env
. ~/.aliases/file
. ~/.aliases/git
. ~/.aliases/terminal
. ~/.aliases/utils

# Configs
eval "$(/opt/homebrew/bin/brew shellenv)"

[[ -s "/Users/imdotnhsang/.gvm/scripts/gvm" ]] && source "/Users/imdotnhsang/.gvm/scripts/gvm"

if which rbenv > /dev/null; then eval "$(rbenv init -)"; fi

eval "$(fnm env --use-on-cd)"

export ANDROID_HOME=$HOME/Library/Android/sdk
export PATH=$PATH:$ANDROID_HOME/emulator
export PATH=$PATH:$ANDROID_HOME/platform-tools

# pnpm
export PNPM_HOME="/Users/imdotnhsang/Library/pnpm"
case ":$PATH:" in
  *":$PNPM_HOME:"*) ;;
  *) export PATH="$PNPM_HOME:$PATH" ;;
esac
# pnpm end

# fnm
FNM_PATH="/Users/imdotnhsang/Library/Application Support/fnm"
if [ -d "$FNM_PATH" ]; then
  export PATH="/Users/imdotnhsang/Library/Application Support/fnm:$PATH"
  eval "`fnm env`"
fi

export JAVA_HOME=/Library/Java/JavaVirtualMachines/zulu-17.jdk/Contents/Home

# Setup JEnv to install run
export PATH="$HOME/.jenv/bin:$PATH"
eval "$(jenv init -)"
# Have JAVA_HOME set by JEnv for us...
jenv enable-plugin export
